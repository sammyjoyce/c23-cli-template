# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# C/C++ files
[*.{c,h,cc,cpp,hpp,cxx,hxx}]
indent_style = space
indent_size = 4

# Zig files
[*.zig]
indent_style = space
indent_size = 4

# Python files
[*.py]
indent_style = space
indent_size = 4
max_line_length = 88

# Shell scripts
[*.{sh,bash}]
indent_style = space
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# JSON files
[*.json]
indent_style = space
indent_size = 2

# Markdown files
[*.{md,markdown}]
trim_trailing_whitespace = false
max_line_length = 80

# Makefiles
[Makefile]
indent_style = tab

# Git config files
[.git*]
indent_style = tab

# GitHub Actions
[.github/workflows/*.{yml,yaml}]
indent_style = space
indent_size = 2

# Package files
[package.json]
indent_style = space
indent_size = 2

# Configuration files
[.*rc]
indent_style = space
indent_size = 2

# Dockerfile
[Dockerfile*]
indent_style = space
indent_size = 4

# Ignore files
[*.{gitignore,dockerignore}]
indent_style = space
indent_size = 2
